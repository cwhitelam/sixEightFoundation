# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = crlf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{cs,vb}]
# Naming rules
dotnet_naming_rule.private_members_without_underscore.symbols = private_fields
dotnet_naming_rule.private_members_without_underscore.style = private_field_style
dotnet_naming_rule.private_members_without_underscore.severity = suggestion

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.private_field_style.capitalization = camel_case
dotnet_naming_style.private_field_style.required_prefix = 